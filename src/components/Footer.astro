---
import LogoIcon from '../assets/icons/icon.astro';
import InstagramIcon from '../assets/icons/InstagramIcon.astro';
import TelegramIcon from '../assets/icons/TelegramIcon.astro';
---

<footer class="site-footer">
  <div class="footer-container">
    <!-- Brand -->
    <div class="footer-brand">
      <a href="/" class="logo">
        <LogoIcon />
        <span>ISOLA</span>
      </a>

      <div class="footer-bottom footer-bottom--pc">
        <div class="footer-socials">
          <a
            href="https://www.instagram.com/isola_uz?igsh=aXptaWo4bGJrZGVs"
            class="social-button"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
          >
            <InstagramIcon />
          </a>
          <a
            href="https://t.me/isola_uz"
            class="social-button"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Telegram"
          >
            <TelegramIcon />
          </a>
        </div>
      </div>
    </div>

    <div class="footer-container-right">
      <!-- Links -->
      <div class="footer-columns">
        <div class="footer-column">
          <h4 class="footer-heading">Информация</h4>
          <ul class="footer-links">
            <li><a href="#">О нас</a></li>
            <li><a href="#">Наши коллекции</a></li>
            <li><a href="#">Часто задаваемые вопросы</a></li>
            <li><a href="/contacts">Контакты</a></li>
          </ul>
        </div>
      </div>

      <!-- Contact -->
      <div class="footer-contact">
        <h4 class="footer-heading">Контакты</h4>
        <div class="footer-contact-wrapper">
          <address class="footer-address">
            <a
              href="https://yandex.com/maps?whatshere%5Bzoom%5D=19&whatshere%5Bpoint%5D=69.256864,41.356871&si=dcpyn7jzamzacaqpkzkz7a6vyc"
              target="_blank"
              rel="noopener noreferrer"
            >
              улица Джами, Ташкент<br /> Координаты: 41.356871, 69.256864</a
            >
          </address>

          <div class="footer-contact-details">
            <a href="tel:+998991227766">+998 99 122 77 66</a>
            <a href="tel:+998901227788">+998 90 122 77 88</a>
            <!-- <a href="mailto:sales@whitemeadow.com">sales@whitemeadow.com</a> -->
          </div>
        </div>
      </div>

      <div class="footer-bottom footer-bottom--mobile">
        <div class="footer-socials">
          <a
            href="https://www.instagram.com/isola_uz?igsh=aXptaWo4bGJrZGVs"
            class="social-button"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
          >
            <InstagramIcon />
          </a>
          <a
            href="https://t.me/isola_uz"
            class="social-button"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Telegram"
          >
            <TelegramIcon />
          </a>
        </div>
      </div>
    </div>
  </div>

  <hr />
  <button
    class="back-to-top"
    onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
    ><span>Вернуться наверх</span>
    <svg
      class="footerScrolltoTop__arrow"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 10 11"
      ><path stroke="#C1CA7F" d="M5 11V1.5m0 0-4 4m4-4 4 4"></path></svg
    >
  </button>
</footer>
